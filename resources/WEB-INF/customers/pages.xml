            </rule>
            <rule>
                <redirect view-id="/customers/credit.xhtml"/>
            </rule>
        </navigation>
        <navigation>
            <rule if-outcome="Success">
                <redirect view-id="/customers/creditList.xhtml"/>
            </rule>
            <rule if-outcome="Cancel">
                <redirect view-id="/customers/creditList.xhtml"/>
